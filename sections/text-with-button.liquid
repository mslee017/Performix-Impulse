<div class="text-button-holder">
  
    <div class="page-width text-center"> 
      
      <hr class="support-line">
        
      {% if section.settings.text != blank %}
        <div class="banner-first-text">
          {{ section.settings.text }}
        </div>
      {% endif %}
      
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn-black-left">
          {{ section.settings.button_label | escape }}
        </a>
      {% endif %}    
    </div>
</div>
    


{% schema %}
  {
    "name": "Text with button",
    "class": "index-section index-section--flush",
    "settings": [
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }

    ],
    "presets": [
      {
        "name": "Text w/ Button",
        "category": "Image"
      }
    ]
  }
{% endschema %}

