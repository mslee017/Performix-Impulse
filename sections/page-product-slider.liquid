    {
        "name": "Product Slider",
        "settings": [],
        "blocks": [
            {
                "type": "Product",
                "name": "Product",
                "settings": [
                    {
                        "id": "heading",
                        "label": "Product Heading",
                        "type": "text"
                    },
                    {
                        "id": "sub_heading",
                        "label": "Sub-Heading",
                        "type": "text"
                    },
                    {
                        "id": "paragraph_one",
                        "label": "Brief Description One",
                        "type": "text"
                    },
                    {
                        "id": "paragraph_two",
                        "label": "Brief Description Two",
                        "type": "text"
                    },
                    {
                        "id": "paragraph_three",
                        "label": "Brief Description Three",
                        "type": "text"
                    },
                    {
                        "id": "product_image",
                        "label": "Product Image",
                        "type": "image_picker"
                    },
					{
						"id": "powered_by_image",
						"label": "Powered By Image",
						"type": "image_picker"
					},
					{
						"id": "product_selector",
						"label": "Selected Product To Link",
						"type": "product"
					}
					
                ]
            }
        ],
        "presets": [
            {
                "name": "Product Slider"
            }
        ]
    }
{% endschema %}
